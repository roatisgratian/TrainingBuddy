<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient android:startColor="#100719" android:centerColor="#100719"
                android:centerY="0.75" android:endColor="#ffffff" android:angle="90" />
            <stroke android:width="1dp" android:color="#100719" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient android:startColor="#58D3F7" android:endColor="#58D3F7"
                    android:angle="90" />
                <stroke android:width="1dp" android:color="#58D3F7" />
            </shape>
        </clip>
    </item>
</layer-list>